{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "dtoFileNameSuffix": [
            ".request.ts", ".response.ts", ".query.ts", ".dto.ts", ".entity.ts"],
          "classValidatorShim": false
        }
      }
    ]
  }
}
