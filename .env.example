APP_NAME=shaper
PORT=3001
FRONTEND_HOST_URL=http://localhost:3000

ENABLE_SWAGGER=true

# Database connection
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=root
DATABASE_DATABASE=shaper

# JWT-token config
